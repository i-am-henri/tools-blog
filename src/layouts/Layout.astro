---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import EditDate from '../components/EditDate.astro';
interface Props {
    title: string,
    lastUpdate: Date,
    description: string,
}
const props: Props = Astro.props;
---
<html lang="en">
    <head>
        <title>
            {props.title}
        </title>
    </head>
    <body>
        <main>
            <Header />
            <slot />
            <EditDate date={props.lastUpdate} />
            <Footer />
        </main>
    </body>
</html>